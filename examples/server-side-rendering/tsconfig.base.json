{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "sourceMap": true,
    "module": "esnext",
    "lib": [
      "es5",
      "es2015.promise",
      "es6",
      "es7",
      "esnext",
      "dom"
    ],
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}
